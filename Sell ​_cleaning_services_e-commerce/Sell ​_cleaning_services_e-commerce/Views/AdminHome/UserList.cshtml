@using Microsoft.AspNetCore.Identity
@using Sell__cleaning_services_e_commerce.Areas.Other
@model List<Sell__cleaning_services_e_commerce.Models.User>
@inject UserManager<User> UserManager
@{
    ViewData["Title"] = "Quản lý nhân viên";
    Layout = "~/Views/Shared/admin/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Quản lý nhân viên</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Admin">Dashboard</a></li>
        <li class="breadcrumb-item active">Quản lý nhân viên</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Danh sách nhân viên
        </div>
        <div class="card-body">
            <div class="mb-3">
                <a asp-action="CreateUserWithRole" asp-controller="AdminHome" class="btn btn-primary">
                    <i class="fas fa-plus-circle"></i> Thêm nhân viên mới
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <table class="table table-striped table-hover" id="employeesTable">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Số điện thoại</th>
                        <th>Vai trò</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>
                                @if (await UserManager.IsInRoleAsync(user, RoleList.Admin))
                                {
                                    <span class="badge bg-primary text-black">Admin</span>
                                }
                                @if (await UserManager.IsInRoleAsync(user, RoleList.Shipper))
                                {
                                    <span class="badge bg-info text-black">Shipper</span>
                                }
                                @if (await UserManager.IsInRoleAsync(user, RoleList.Salesperson))
                                {
                                    <span class="badge bg-info text-black">Nhân viên bán hàng</span>
                                }
                            </td>
                            <td>

                                <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger"
                                   onclick="return confirm('Bạn có chắc chắn muốn xóa nhân viên này?');">
                                    <i class="fas fa-trash-alt"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>document.getElementById("staff").classList.add("active");</script>
<script>
    $(document).ready(function () {
        $('#employeesTable').DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/1.10.25/i18n/Vietnamese.json'
            }
        });
    });

    document.getElementById("AdminHome").classList.add("active");
</script>
