@model IEnumerable<Sell__cleaning_services_e_commerce.Models.EmailLog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/admin/_Layout.cshtml";
}

<div class="container my-4">
    <h1 class="mb-4">Email Log</h1>
    <div class="mb-3">
        <a asp-action="CreateEmailToOne" class="btn btn-primary me-2">Tạo email gửi cho một người cụ thể</a>
        <a asp-action="CreateEmailToAll" class="btn btn-secondary">Tạo email gửi cho tất cả khách hàng</a>
    </div>
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.ToEmail)</th>
                <th>@Html.DisplayNameFor(model => model.Subject)</th>
                <th>@Html.DisplayNameFor(model => model.SentDate)</th>
                <th>@Html.DisplayNameFor(model => model.Sender)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ToEmail)</td>
                    <td>@Html.DisplayFor(modelItem => item.Subject)</td>
                    <td>@Html.DisplayFor(modelItem => item.SentDate)</td>
               
                    <td>@Html.DisplayFor(modelItem => item.Sender.Id)</td>
                    <td><a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Details</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>