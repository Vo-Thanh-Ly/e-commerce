@model Sell__cleaning_services_e_commerce.Models.ViewModel.EmailLogToAllView

@{
    ViewData["Title"] = "CreateEmail";
    Layout = "~/Views/Shared/admin/_Layout.cshtml";
}

<h4 class="mb-3">Gửi email cho tất cả khách hàng</h4>
<h5 class="mb-3 text-danger">
    <strong>Lưu ý:</strong> Việc gửi email có thể mất nhiều thời gian, tùy thuộc vào số lượng khách hàng.
</h5>
<hr />
<div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8">
        <form asp-action="CreateEmailToAll" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Subject" class="form-label fw-bold"></label>
                <input asp-for="Subject" class="form-control" required />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Message" class="form-label fw-bold"></label>
                <textarea asp-for="Message" id="Message" class="form-control" rows="5" required></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>


<div class="mt-3">
    <a asp-action="Index" class="btn btn-link">Back to List</a>
</div>

<script>
    tinymce.init({
        selector: '#Message',  // Target the textarea with id 'Message'
        menubar: false,
        plugins: 'advlist autolink lists link charmap print preview anchor textcolor',
        toolbar: 'undo redo | bold italic | alignleft aligncenter alignright | bullist numlist outdent indent | link | forecolor backcolor | charmap',
        image_advtab: false,
        media: false,
        extended_valid_elements: "a[href|target=_blank|title]"
    });
</script>
