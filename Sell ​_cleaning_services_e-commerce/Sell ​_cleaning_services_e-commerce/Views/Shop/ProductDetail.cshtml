@model Sell__cleaning_services_e_commerce.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/customer/_Layout.cshtml";
}

<style>
    .product-description {
        margin: 5 auto;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #f9f9f9;
    }

    #toggle-button {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 8px 16px;
        cursor: pointer;
        margin-top: 10px;
        border-radius: 5px;
    }

        #toggle-button:hover {
            background-color: #0056b3;
        }

    .star-rating {
        display: inline-flex;
        flex-direction: row-reverse;
    }

        .star-rating input {
            display: none;
        }

        .star-rating label {
            cursor: pointer;
            width: 20px;
            height: 20px;
            margin-right: 5px;
            color: #ddd;
        }

            .star-rating label:before {
                content: '\f005';
                font-family: FontAwesome;
            }

        .star-rating input:checked ~ label {
            color: #ffca08;
        }
</style>

<div class="container py-5">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#" class="text-black">Trang chủ</a></li>
            <li class="breadcrumb-item"><a href="#" class="text-black">@Model.Category.CategoryName</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.ProductName</li>
        </ol>
    </nav>

    <div class="row g-4">
        <!-- Product Images -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                @if (ViewBag.Images != null && ViewBag.Images.Count > 0)
                {
                    <div id="productCarousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            @for (int i = 0; i < ViewBag.Images.Count; i++)
                            {
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <img src="@ViewBag.Images[i].ImageUrl" class="d-block w-100" alt="Product Image" style="object-fit: contain; height: 500px;">
                                </div>
                            }
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon bg-dark rounded-circle" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon bg-dark rounded-circle" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                }
                else
                {
                    <img src="/img/no-image.jpg" class="img-fluid" alt="No Image Available">
                }
            </div>
        </div>

        <!-- Product Info -->
        <div class="col-lg-6">
            <div class="ps-lg-4">
                <h1 class="display-6 fw-bold mb-3">@Model.ProductName</h1>

                <div class="d-flex align-items-center mb-3">
                    <div class="me-3">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Math.Round(ViewBag.AverageRating))
                            {
                                <i class="fa fa-star text-warning"></i>
                            }
                            else
                            {
                                <i class="fa fa-star-o text-warning"></i>
                            }
                        }
                    </div>
                    <span class="text-muted">(@(ViewBag.Comments?.Count ?? 0) đánh giá)</span>
                </div>

                <h2 class="display-6 fw-bold  mb-4">@Model.Price.ToString("#,0") VNĐ</h2>

                <div class="mb-4">
                    @if (Model.IsDiscontinued)
                    {

                        <span class="badge bg-success p-2 rounded-pill">Còn bán</span>
                    }
                    else
                    {
                        <span class="badge bg-danger p-2 rounded-pill">Ngừng bán</span>
                    }
                </div>

