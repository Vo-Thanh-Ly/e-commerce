@model Sell__cleaning_services_e_commerce.Models.ViewModel.ProductViewModel

@{
    ViewData["Title"] = "Create Product";
    Layout = "~/Views/Shared/admin/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <h1 class="mb-4">Thêm sản phẩm</h1>

    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <div class="row g-4">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Thông tin cơ bản</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Product.ProductName" class="form-label"></label>
                                <input asp-for="Product.ProductName" class="form-control" />
                                <span asp-validation-for="Product.ProductName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Product.CategoryId" class="form-label"></label>
                                <select asp-for="Product.CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                            </div>
                            <div class="col-12">
                                <label asp-for="Product.Description" class="form-label"></label>
                                <textarea asp-for="Product.Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Product.Description" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Product.Price" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Product.Price" class="form-control" />
                                </div>
                                <span asp-validation-for="Product.Price" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Product.QuantityInStock" class="form-label"></label>
                                <input asp-for="Product.QuantityInStock" class="form-control" />
                                <span asp-validation-for="Product.QuantityInStock" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm mt-4">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Chi tiết sản phẩm</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Product.Brand" class="form-label"></label>
                                <input asp-for="Product.Brand" class="form-control" />
                                <span asp-validation-for="Product.Brand" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Product.Supplier" class="form-label"></label>
                                <input asp-for="Product.Supplier" class="form-control" />
                                <span asp-validation-for="Product.Supplier" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Product.Weight" class="form-label"></label>
                                <input asp-for="Product.Weight" class="form-control" />
                                <span asp-validation-for="Product.Weight" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Product.Dimensions" class="form-label"></label>
                                <input asp-for="Product.Dimensions" class="form-control" />
                                <span asp-validation-for="Product.Dimensions" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Product.Material" class="form-label"></label>
                                <input asp-for="Product.Material" class="form-control" />
                                <span asp-validation-for="Product.Material" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Đặc điên công nghệ</h5>
                        <div class="mb-3">
                            <label asp-for="Product.Power" class="form-label"></label>
                            <input asp-for="Product.Power" class="form-control" />
                            <span asp-validation-for="Product.Power" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Product.PowerSource" class="form-label"></label>
                            <input asp-for="Product.PowerSource" class="form-control" />
                            <span asp-validation-for="Product.PowerSource" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Product.ManufactureDate" class="form-label"></label>
                            <input asp-for="Product.ManufactureDate" class="form-control" type="date" />
                            <span asp-validation-for="Product.ManufactureDate" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Product.Origin" class="form-label"></label>
                            <input asp-for="Product.Origin" class="form-control" />
                            <span asp-validation-for="Product.Origin" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Product.WarrantyPeriod" class="form-label"></label>
                            <input asp-for="Product.WarrantyPeriod" class="form-control" />
                            <span asp-validation-for="Product.WarrantyPeriod" class="text-danger"></span>
                        </div>
                        <div class="form-check mb-3">
                            <input asp-for="Product.IsDiscontinued" class="form-check-input" type="checkbox" />
                            <label asp-for="Product.IsDiscontinued" class="form-check-label"></label>
                        </div>

                        <input type="hidden" asp-for="Product.CreatedDate" />
                        <input type="hidden" asp-for="Product.LastUpdatedDate" />

                    </div>
                </div>
            </div>


            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Ảnh</h5>
                        <div class="mb-3">
                            <label asp-for="ProductImages" class="form-label"></label>
                            <input type="file" name="ProductImages" multiple accept="image/*" />
                            <span asp-validation-for="ProductImages" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>


        </div>
        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Create Product</button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">Quay lại sanh mục sản phẩm</a>
        </div>
    </form>
</div>

<script>
                document.getElementById("CreatedDate").value = new Date().toISOString();
    document.getElementById("LastUpdatedDate").value = new Date().toISOString();
                document.getElementById("product").classList.add("active");
</script>