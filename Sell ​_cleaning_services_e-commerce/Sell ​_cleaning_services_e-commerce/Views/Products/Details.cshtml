@model Sell__cleaning_services_e_commerce.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/admin/_Layout.cshtml";
}

<div class="container mt-4">
    <h1>Chi tiết</h1>

    <div class="card">
        <div class="card-body">

            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.ProductName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ProductName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.QuantityInStock)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.QuantityInStock)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Brand)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Brand)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Supplier)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Supplier)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Weight)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Weight)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Dimensions)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Dimensions)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Material)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Material)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Power)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Power)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.PowerSource)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PowerSource)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.ManufactureDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ManufactureDate)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Origin)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Origin)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.WarrantyPeriod)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.WarrantyPeriod)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CreatedDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CreatedDate)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.LastUpdatedDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.LastUpdatedDate)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.IsDiscontinued)
                </dt>
                <dd class="col-sm-9">
                    @if (Model.IsDiscontinued)
                    {
                        <span class="badge bg-danger">Ngừng bán</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Còn bán</span>
                    }
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Category.CategoryName)
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.ProductId">Edit</a>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>

<script>

    document.getElementById("product").classList.add("active");
</script>
