@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Quên mật khẩu?";
}

<div class="container mt-5">
    <h1 class="text-center text-primary">@ViewData["Title"]</h1>
    <h2 class="text-center">Nhập email của bạn.</h2>
    <hr class="mb-4" />

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <form method="post" class="shadow p-4 rounded bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email của bạn</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <button type="submit" class="w-100 btn btn-primary btn-lg">Đặt lại mật khẩu</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
