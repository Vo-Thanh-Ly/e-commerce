@model string

@if (!string.IsNullOrEmpty(Model))
{
    // Xác định lớp cảnh báo (alert) dựa vào tiền tố của thông báo
    var alertType = Model.StartsWith("Error") ? "danger"
                  : Model.StartsWith("Info") ? "info"
                  : "success";

    <div class="alert alert-@alertType alert-dismissible fade show" role="alert">
        <!-- Nút đóng thông báo -->
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng"></button>

        <!-- Nội dung thông báo -->
        <span>@Model</span>
    </div>
}
