@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Truy cập bị từ chối";
}

<div class="container mt-5">
    <header class="text-center">
        <h1 class="text-danger display-4">@ViewData["Title"]</h1>
        <p class="text-muted">Bạn không có quyền truy cập vào tài nguyên này.</p>
    </header>

    <div class="text-center mt-4">
        <!-- Nút quay lại hoặc điều hướng đến trang chủ -->
        <a href="/" class="btn btn-primary me-2">Quay về trang chủ</a>
        <a href="javascript:history.back()" class="btn btn-secondary">Quay lại</a>
    </div>
</div>
