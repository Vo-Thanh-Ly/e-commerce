@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Gửi lại xác nhận email";
}

<div class="container mt-5">
    <h1 class="text-primary text-center">@ViewData["Title"]</h1>
    <h2 class="text-center">Nhập email của bạn.</h2>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary">Gửi lại</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
